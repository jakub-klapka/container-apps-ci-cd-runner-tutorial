FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive

# Minimal deps: curl (HTTP), openssl (JWT signing), python3 (JSON parsing), ca-certificates (TLS roots)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    openssl \
    python3 \
    ca-certificates \
  && rm -rf /var/lib/apt/lists/*

COPY github-actions-runner/init.sh ./init.sh
RUN chmod +x ./init.sh

ENTRYPOINT ["./init.sh"]
